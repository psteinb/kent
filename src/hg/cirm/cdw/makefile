kentSrc = ../../..
# Build all subdirectories we care about

include ../../../inc/common.mk


# List of directories to build
USE_DIRS = $(UTIL_DIRS) $(CGI_DIRS)

UTIL_DIRS = \
    cdwAddAssembly \
    cdwAddQaContamTarget \
    cdwAddQaEnrichTarget \
    cdwAddSubscriber \
    cdwChangeFormat \
    cdwCheckDataset \
	cdwCheckValidation \
	cdwCorrectFileTags \
    cdwCreateUser \
    cdwFakeManifestFromSubmit \
    cdwJob \
    cdwMakeContaminationQa \
    cdwMakeEnrichments \
    cdwMakeFileTags \
    cdwMakePairedEndQa \
    cdwMakeRepeatQa \
    cdwMakeReplicateQa \
    cdwMakeTrackViz \
    cdwMakeValidFile \
    cdwQaEvaluate \
    cdwReallyRemoveFiles \
    cdwRetryJob \
    cdwRunDaemon \
    cdwRunOnIds \
    cdwSubmit \
    cdwSwapInSymLink \
    cdwUndeprecate \
    utils/cdwFastqPolyFilter \
    utils/cdwVcfStats

CGI_DIRS = \
    cdwWebBrowse 

TEST_DIRS = \
	encode2BedDoctor 

utils: cdwLib
	${MAKE} buildUtils

cdwLib:
	cd lib && ${MAKE}

buildUtils: $(UTIL_DIRS:%=%.buildUtils)
%.buildUtils:
	cd $* && $(MAKE)

test::	${TEST_DIRS:%=%.test}
%.test:
	cd $* && ${MAKE} test

clean:: $(USE_DIRS:%=%.clean)
	- find . -name '*.o' -exec rm {} \;
	cd lib && ${MAKE} clean
%.clean:
	(cd $* && ${MAKE} clean)

cgi:: cdwLib
	${MAKE} buildCgi

buildCgi:: $(CGI_DIRS:%=%.buildCgi)
%.buildCgi:
	cd $* && ${MAKE}

alpha:: cdwLib
	${MAKE} buildAlpha

buildAlpha:: $(CGI_DIRS:%=%.buildAlpha)
%.buildAlpha:
	(cd $* && ${MAKE} alpha)
