# sensitive parameters
BLASTZ_H=2000
BLASTZ_Y=3000
BLASTZ_L=3000
BLASTZ_K=2400
BLASTZ_Q=/genome/src/HoxD55.q

# target
SEQ1_DIR=/genome/gbdb-HL/$ref/$ref.2bit
SEQ1_LEN=/genome/gbdb-HL/$ref/chrom.sizes
SEQ1_CHUNK=20000000
SEQ1_LAP=0
SEQ1_LIMIT=40

# query
SEQ2_DIR=/genome/gbdb-HL/$query/$query.2bit
SEQ2_LEN=/genome/gbdb-HL/$query/chrom.sizes
SEQ2_CHUNK=10000000
SEQ2_LAP=10000
SEQ2_LIMIT=50

BASE=/genome/gbdb-HL/$ref/lastz/vs_$query
TMPDIR=/scratch/tmp

# for psl filtering
# flag: set to 1 if you want to filter the genome-wide lastz psl output
FILTERPSL=1
SEQ_IDENT=60
MIN_ENTROPY=1.8
WIN_SIZE=30

# for patch chains
# flag: set to 1 if you want to patch chains
PATCHCHAIN=1
# consider only chains with at least that score
CHAIN_MINSCORE=5000
# consider only gaps in the Target (reference) and Query of that size
GAPMAXSIZE_T=500000
GAPMAXSIZE_Q=500000
GAPMINSIZE_T=20
GAPMINSIZE_Q=20
# number of cluster jobs to be generated
NUM_JOBS=1000
# lastz parameters for patching (should be more sensitive than the global parameters)
